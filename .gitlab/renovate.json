{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": [
    "* * 1 * *"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "dependency patches"
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "groupName": "dependency feature release updates"
    }
  ]
}
